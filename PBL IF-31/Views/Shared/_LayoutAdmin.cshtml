<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Layout utama */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background: #343a40;
            color: white;
            min-height: 100vh;
            padding-top: 10px;
        }

            .sidebar a {
                color: white;
                padding: 10px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .header {
            background: #f8f9fa;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .footer {
            background: #f8f9fa;
            padding: 10px;
            text-align: center;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <!-- Wrapper utama -->
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3 class="text-center py-3">Admin Panel</h3>
            <a href="/Admin/Index">🏠 Dashboard</a>
            <a href="/Admin/Mahasiswa">🎓 Mahasiswa</a>
            <a href="/Admin/Dosen">👨‍🏫 Dosen</a>
            <a href="/Divisi">👔 Divisi</a>
            <a href="/Login/Logout" class="text-danger">🚪 Logout</a>
        </div>
        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <span class="h4">Admin Dashboard</span>
            </div>
            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>
            <!-- Footer -->
            <div class="footer">
                <p>&copy; @DateTime.Now.Year Admin Dashboard</p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
